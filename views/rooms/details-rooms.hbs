<div class=" container">
    <h2 class="title">Room details</h2>
    <hr>
    <div class="row">
        <di v class="col-md-6 d-flex align-items-stretch">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p>{{type}}</p>
                    <img src="{{profileImg}}" class="card-img-top" alt="{{name}}">
                    <p>{{location.coordinates.[0]}}</p>
                    <p>{{location.coordinates.[1]}}</p>
                    <p>{{description}}</p>
                    <a href="/edit/{{_id}}" class="btn btn-warning btn-sm">Edit</a>
                    <br>
                    <form action="/delete/{{_id}}" method="POST">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                    </form>
                    <br>
                </div>
            </div>
    </div>
    <div id="mapDetails"></div>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/mapStyles.js"></script>
<script src="/js/roomDetailsMap.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?callback=initMap&key=AIzaSyAk7rsgb-yjruLF1snOK0qV6lRrGxbjqQQ"></script>