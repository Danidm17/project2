<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Edit {{name}}</h1>
            <hr>
            <form action="/edit" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="type" class="form-label">Type</label>
                            <select class="form-select" name="type" id="type" value="{{type}}">
                                <option value="Couch">Couch</option>
                                <option value="Single Room">Single Room</option>
                                <option value="Double Room">Double Room</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="profileImg" class="form-label">Imagen</label>
                        <input type="file" class="form-control" id="profileImg" name="profileImg" value="{{profileImg}}">

                    </div>

                    {{!-- <div class="mb-3">
                        <form name="profileImg" type="POST" enctype="multipart/formdata">
                            <input type="file" name="profileImg" />
                        </form>
                    </div> --}}
                    <div class="col">
                        <div class="mb-3">
                            <label for="latitude" class="form-label">Latitude</label>
                            <input type="text" class="form-control" id="latitude" name="latitude"
                                value="{{location.coordinates.[0]}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="longitude" class="form-label">Longitude</label>
                            <input type="text" class="form-control" id="longitude" name="longitude"
                                value="{{location.coordinates.[1]}}">
                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="descriptionInput" class="form-label">Descripci√≥n</label>
                        <textarea class="form-control" id="descriptionInput" rows="3" name="description">
                            {{description}}</textarea>
                    </div>

                </div>

                <input type="hidden" name="_id" value="{{_id}}">

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-secondary btn-lg">Edit Room</button>
                </div>
            </form>
        </div>
    </div>


</div>