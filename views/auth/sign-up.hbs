<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Sign Up</h1>
            <hr>

            <form action="/sign-up" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Email</label>
                        <input type="email" class="form-control" id="emailInput" name="email">
                    </div>
                    <div class="col">
                        <label for="pwdInput" class="form-label">Password</label>
                        <input type="password" class="form-control" id="pwdInput" name="userPwd">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="usernameInput" class="form-label">User name</label>
                    <input type="text" class="form-control" id="usernameInput" name="username">
                </div>

                <div class="col">
                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <select class="form-select" name="role" id="role">
                            <option value="USER">User</option>
                            <option value="ROOMHOLDER">Roomholder</option>
                        </select>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Sign Up</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>