<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edit Profile</h1>
            <hr>

            <form action="/edit-profile" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Email</label>
                        <input type="email" class="form-control" id="emailInput" name="email" value="{{email}}">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="usernameInput" class="form-label">User name</label>
                    <input type="text" class="form-control" id="usernameInput" name="username" value="{{username}}">
                </div>

                <div class="col">
                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <select class="form-select" name="role" id="role" value="{{role}}">
                            <option value="USER">User</option>
                            <option value="ROOMHOLDER">Roomholder</option>
                        </select>
                    </div>
                </div>

                <input type="hidden" name="_id" value="{{_id}}">

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Edit</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>