<div class=" container">
    <h2 class="title">Users</h2>
    <hr>
    <div class="row">

        {{#each users}}
        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">{{username}}</h5>
                    <p>{{email}}</p>
                    <p>{{role}}</p>
                    <div>
                        <a class="btn btn-secondary" href='/profile/{{_id}}' role="nav-link">User profile</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>